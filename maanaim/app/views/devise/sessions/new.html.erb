<% content_for :titulo do %>Login<% end %>
  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-4 offset-md-4"><img class="center-block img-fluid d-block mx-auto py-3" src="<%= image_path "maanain-symbol.png" %>">
        
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true %>
                <%= f.input :password, required: false %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
            
            <%= render "devise/shared/links" %>
         
        </div>
      </div>
    </div>
  </div>



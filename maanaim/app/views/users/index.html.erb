<table class="table">
<thead>
  <tr>
    <th>Email</th>
    <th>Nome</th>
    <th colspan="2"></th>
  </tr>
</thead>

<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.pessoa.nome if user.pessoa %></td>
      <td><%= link_to 'Edit', edit_user_path(user), remote: true %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
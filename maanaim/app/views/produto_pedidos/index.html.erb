<h1>Produto Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Pedido</th>
      <th>Produto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produto_pedidos.each do |produto_pedido| %>
      <tr>
        <td><%= produto_pedido.pedido %></td>
        <td><%= produto_pedido.produto %></td>
        <td><%= link_to 'Show', produto_pedido %></td>
        <td><%= link_to 'Edit', edit_produto_pedido_path(produto_pedido) %></td>
        <td><%= link_to 'Destroy', produto_pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


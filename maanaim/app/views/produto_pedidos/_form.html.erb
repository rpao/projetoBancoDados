<%= simple_form_for(@produto_pedido, remote: true, html: {class: "form-inline"}) do |f| %>
  <%= f.error_notification %>

    <%= f.association :pedido, :as => :hidden, value_method: :id%>
    <%= f.input :quantidade,  wrapper_html: {class: "form-group w-25"}, input_html: {class: 'form-control w-50'} %>
    <%= f.association :produto,collection: Produto.where(ativo: true).order(:nome), label_method: :nome, wrapper_html: {class: "form-group w-50"}, input_html: {class: 'form-control w-75'} %>

    <%= f.submit 'Adicionar', class:"btn btn-primary w-25" %>
<% end %>
<%= render 'produto_pedidos/index' %>

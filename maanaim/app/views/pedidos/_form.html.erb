
<div id="myContent">
  <% if action_name == 'edit' %>
     <%= render 'produto_pedidos/form' %>
  <% else %>
    <%= simple_form_for(@pedido,  remote: true, html: {class: "form-inline"}) do |f| %>
      <%= f.error_notification %>
      <%= f.submit 'Abrir conta', class: "btn btn-primary w-25" %>
      <%= f.association :conta_evento, label_method: :nome, collection: @evento.conta_eventos, wrapper_html: {class: "form-group w-50"}, input_html: {class: 'form-control w-50'} %>
      <%= f.input :obs, wrapper_html: {class: "form-group w-25"}, input_html: {class: 'form-control w-75'} %>
    <% end %>
  <%end %>
</div>

<%= simple_form_for(@pessoa) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cpf %>
    <%= f.input :nome %>
    <%= f.input :sexo %>
    <%= f.input :dtNasc, as: :string, input_html: { type: 'date'} %>
    <%= f.input :logradouro %>
    <%= f.input :cep %>
    <%= f.input :bairro %>
    <%= f.input :email %>
    <%= f.input :telefone %>
    <%= f.input :ativo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

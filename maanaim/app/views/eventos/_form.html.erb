<%= simple_form_for(@evento) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :quantidade_de_vagas %>
    <%= f.input :data_de_inicio %>
    <%= f.input :data_de_fim %>
    <%= f.association :tipo_evento %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

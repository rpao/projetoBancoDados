<%= simple_form_for(@evento) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :quantidade_de_vagas %>
    <%= f.input :data_de_inicio, as: :string, input_html: { type: 'date'} %>
    <%= f.input :data_de_fim, as: :string, input_html: { type: 'date'} %>
    <%= f.association :tipo_evento, label_method: :nome %>
    <%= f.association :pessoas,label_method: :nome,collection: Pessoa.where(ativo: true).order(:nome) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
